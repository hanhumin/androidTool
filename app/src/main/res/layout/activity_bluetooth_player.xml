<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bluetooth.BluetoothPlayerActivity">

    <TextView
        android:id="@+id/tvPlayTime"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp18"
        android:text="开始时间"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/tvTotalTime"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPlayTime"
        android:textSize="@dimen/sp18"
        android:text="总是时长"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/tvMusicInfo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTotalTime"
        android:textSize="@dimen/sp18"
        android:text="接收到的歌曲信息"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/tvPlayToggle"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/tvMusicInfo"
        android:textSize="@dimen/sp18"
        android:text="控制远程播放状态"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/tvLocalPlayer"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="#347"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="18sp"
        android:text="作为手机音频播放器"/>
    <TextView
        android:id="@+id/tvRequestAudioFocus"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="#347"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvLocalPlayer"
        app:layout_constraintEnd_toStartOf="@+id/tvRemotePlayer"
        android:textSize="18sp"
        android:text="请求音频焦点"/>
    <TextView
        android:id="@+id/tvRemotePlayer"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="#347"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:text="作为车载蓝牙"/>

</androidx.constraintlayout.widget.ConstraintLayout>