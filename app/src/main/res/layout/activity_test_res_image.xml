<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".resimage.TestResImageActivity"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_res_test0"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:scaleType="centerCrop" />
<!--        使用 wrap_content-->
        <ImageView
            android:id="@+id/image_res_test0_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dime_20dp"/>
        <ImageView
            android:id="@+id/image_res_test1"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dime_20dp"/>
        <!--        使用 wrap_content-->
        <ImageView
            android:id="@+id/image_res_test1_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dime_20dp"/>
        <ImageView
            android:id="@+id/image_res_test2"
            android:layout_width="256dp"
            android:layout_height="256dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dime_20dp"/>
        <!--        使用 wrap_content-->
        <ImageView
            android:id="@+id/image_res_test2_w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_marginTop="@dimen/dime_20dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>