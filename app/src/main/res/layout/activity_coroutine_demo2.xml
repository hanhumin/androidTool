<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kotlinlearn.demo.xiecheng.CoroutineDemoActivity"
    android:id="@+id/root">
    <TextView
        android:id="@+id/tvTest1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/border"
        android:text="主线程中进行网络操作"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/tvTest2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:background="@drawable/border"
        android:text="主线程中协程进行网络操作"
        app:layout_constraintTop_toBottomOf="@+id/tvTest1"/>

</androidx.constraintlayout.widget.ConstraintLayout>