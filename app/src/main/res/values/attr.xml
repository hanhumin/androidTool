<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="VerificationCodeInputView">
        <!--输入框的数量-->
        <attr name="vci_tv_number" format="integer" />
        <!--输入框的宽度-->
        <attr name="vci_tv_width" format="dimension|reference" />
        <!--输入框的高度-->
        <attr name="vci_tv_height" format="dimension|reference" />
        <!--输入框之间的分割线-->
        <attr name="vci_tv_divider_drawable" format="reference" />
        <!--输入框文字颜色-->
        <attr name="vci_tv_text_color" format="color|reference" />
        <!--输入框文字大小-->
        <attr name="vci_tv_text_size" format="dimension|reference" />
        <!--输入框获取焦点时边框-->
        <attr name="vci_tv_bg_focus" format="reference" />
        <!--输入框没有焦点时边框-->
        <attr name="vci_tv_bg_normal" format="reference" />
        <!--输入框间距-->
        <attr name="vci_tv_spacing" format="reference|dimension" />
    </declare-styleable>
    <declare-styleable name="BadgeView">
        <attr name="badge_image_width" format="integer" />
        <attr name="badge_image_height" format="integer" />
        <attr name="badge_image_padding" format="integer" />
        <attr name="badge_image_padding_left" format="integer" />
        <attr name="badge_image_padding_right" format="integer" />
        <attr name="badge_image_padding_top" format="integer" />
        <attr name="badge_image_padding_bottom" format="integer" />
    </declare-styleable>
    <declare-styleable name="CollapsedTextView">
        <attr name="collapsedLines" format="integer" />
        <attr name="expandedText" format="string" />
        <attr name="collapsedText" format="string" />
        <attr name="expandedDrawable" format="reference" />
        <attr name="collapsedDrawable" format="reference" />
        <attr name="tipsGravity">
            <flag name="end" value="0" />
            <flag name="bottom" value="1" />
        </attr>
        <attr name="tipsColor" format="reference|color" />
        <attr name="tipsUnderline" format="boolean" />
        <attr name="tipsClickable" format="boolean" />
    </declare-styleable>
    <declare-styleable name="SliderView_Layout">
        <attr name="layout_type" format="enum" >
            <enum name="left_menu" value="1"/>
            <enum name="right_menu" value="2"/>
            <enum name="content" value="3"/>
        </attr>
    </declare-styleable>
</resources>